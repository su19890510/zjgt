<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
>
    
     <LinearLayout 
     android:id="@+id/bottom_layout"
     android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
        >
          <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="50dip" 
  			android:id="@+id/title" 
  			android:background="@drawable/top_bg"
  			android:gravity="center_vertical" 
  			
  			 >  
      		<TextView
      		    android:id="@+id/mypublishtaskdetail_back"
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:drawableLeft="@drawable/back_seletor"
        		android:text=""
        		android:layout_centerVertical="true"
        		 android:textSize="18dp"	       		
        		android:layout_marginLeft="15dp"	
				android:textColor="@color/lightwhite" /> 
				
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="参与任务"
                android:layout_centerInParent="true"
                android:gravity="center"
        		android:textSize="18dp"      		     		        		
				android:textColor="#ffffff" /> 
				
          	
      		
      	</RelativeLayout>
      	 
         
          
   
      
           
          <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"       
            android:paddingBottom="5dip"
            android:paddingTop="10dip"
            android:background="#ffffff"
             >
           
            <TextView
                android:id="@+id/myroom_save_money"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="费用"               
                android:textSize="15sp"            
                android:textColor="@color/back"
                />

            <TextView
                android:id="@+id/myroom_save_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:gravity="center"
                android:text="任务名称"             
                android:textSize="15sp"
                android:textColor="@color/back"
            >
           </TextView>
           
            <TextView
                android:id="@+id/myroom_save_type"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="类型"             
                android:textSize="15sp"
                android:textColor="@color/back"
            >
           </TextView>
           <TextView
                android:id="@+id/myroom_save_state"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="状态"             
                android:textSize="15sp"
                android:textColor="@color/back"
            >
           </TextView>
            
        </LinearLayout>
           
  

        

    </LinearLayout>
    

</RelativeLayout>
