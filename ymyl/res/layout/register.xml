<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/back_color"
    android:id="@+id/login_activity_main" >
    
 <TextView android:id="@+id/choose_mer_tital" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/top_text_style"
        android:text="@string/register_tittle"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/headdefault" 
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

               <EditText
                   android:id="@+id/register_activity_name"
                   android:layout_width="0dp"
                   android:layout_height="45dip"
                   android:layout_marginTop="8dp"
                   android:layout_weight="5"
                   android:background="@drawable/input_bg"
                   android:drawableLeft="@drawable/location"
                   android:drawablePadding="25dip"
                   android:ems="10"
                   android:hint="请输入地址"
                   android:inputType="textEmailAddress"
                   android:paddingLeft="25dip"
                   android:textColor="#ff98bede"
                   android:textColorHint="#ffdddddd" >

                </EditText>

            </LinearLayout>

            <EditText
                android:id="@+id/register_activity_phone"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginTop="1dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="25dip"
                android:hint="请输入手机号"
                android:inputType="textEmailAddress"
                android:paddingLeft="25dip"
                android:textColor="#ff98bede"
                android:textColorHint="#ffdddddd" />

            <EditText
                android:id="@+id/register_activity_password"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginTop="1dp"               
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="25dip"
                android:hint="请输入密码"
                android:paddingLeft="25dip"
                android:password="true"
                android:textColor="#ff98bede"
                android:textColorHint="#ffdddddd" />

            <Button
                android:id="@+id/register_activity_confirm"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="8dip" 
                android:layout_marginRight="8dip"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn"
                android:enabled="true"
                android:shadowColor="#7f000000"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="18sp" />
           
        </LinearLayout>

</LinearLayout>
